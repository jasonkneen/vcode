# Backend/Secure Environment Variables (NOT exposed to frontend)
# These variables are only available in the main process and backend
DB_FILE_NAME=file:local.db

# Frontend Environment Variables (exposed to frontend via VITE_ prefix)
# These variables will be available in the renderer process
VITE_API_URL=http://localhost:3000
VITE_PUSHER_HOST=localhost
VITE_PUSHER_PORT=6001
VITE_PUSHER_KEY=app-key

# Example of other environment variables you might want to add:
# VITE_APP_NAME=MyApp
# VITE_APP_VERSION=1.0.0
# VITE_ENABLE_DEBUG=false

# Sensitive variables (backend only - no VITE_ prefix):
# DATABASE_PASSWORD=secret
# JWT_SECRET=super-secret
# ENCRYPTION_KEY=another-secret
